---
import { Head } from "@/components/Head";
import HomePage from "@/components/pages/HomePage";
import "@wix/wix-vibe-plugins/plugins-vars.css";
import "@wix/wix-vibe-plugins/plugins-theme.css";
import "@/styles/global.css";

const title = "Car Loans & Home Loans Australia | AI-Powered Finance Broker | Nik Finance";
const description = "Get matched with 130+ lenders in minutes. Car finance, home loans, refinancing & business loans. Free service, fast approval. Australia's smartest loan marketplace.";
const canonical = "https://www.nik.finance/";

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "FinancialService",
  "name": "Nik Finance",
  "url": "https://www.nik.finance",
  "description": description,
  "telephone": "1300 NIK FIN",
  "email": "hello@nik.finance",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "AU",
    "addressRegion": "Australia"
  },
  "areaServed": { "@type": "Country", "name": "Australia" },
  "priceRange": "Free Service",
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"],
    "opens": "09:00",
    "closes": "17:00"
  },
  "founder": { "@type": "Person", "name": "Amir Nikibin" },
  "sameAs": [
    "https://www.tiktok.com/@nik.finance",
    "https://www.facebook.com/nikfinance.amir",
    "https://www.instagram.com/nik._.finance/",
    "https://www.linkedin.com/in/amir-nikibin/"
  ]
};

const webPageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": title,
  "description": description,
  "url": canonical,
  "publisher": { "@type": "Organization", "name": "Nik Finance" }
};
---

<html lang="en" class="w-full h-full">
  <head>
    <Head />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="car loan, home loan, car finance, mortgage broker, refinance, personal loan, business loan, Australia, AI finance" />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(webPageSchema)} />
  </head>
  <body class="w-full h-full">
    <div id="seo-fallback">
      <h1>Nik Finance — Australia's Smartest Loan Marketplace</h1>
      <p>Get matched with 130+ lenders in minutes. Nik Finance is an AI-powered finance broker helping Australians find the best rates on car loans, home loans, personal loans, business loans, and refinancing. Free service, no hidden fees, fast approval.</p>
      <h2>Our Loan Products</h2>
      <p>Car loans from $5,000 to $150,000. Home loans for first home buyers, investors, and refinancers. Personal loans for debt consolidation, renovations, and more. Business loans including equipment finance, working capital, and startup funding. Bad credit options available.</p>
      <h2>Why Choose Nik Finance?</h2>
      <p>Compare rates from over 130 lenders including major banks, credit unions, and specialist lenders. AI-powered matching finds you the best deal in minutes. Authorised under Finsure Group — one of Australia's largest finance aggregators.</p>
      <nav>
        <a href="/car-loans">Car Loans</a> |
        <a href="/home-loans">Home Loans</a> |
        <a href="/personal-loans">Personal Loans</a> |
        <a href="/business-loans">Business Loans</a> |
        <a href="/bad-credit-loans">Bad Credit Loans</a> |
        <a href="/refinancing">Refinancing</a> |
        <a href="/about">About</a> |
        <a href="/apply">Apply Now</a>
      </nav>
    </div>
    <div id="root" class="w-full h-full">
      <HomePage client:only="react" />
    </div>
    <script>document.getElementById('seo-fallback')?.remove();</script>
  </body>
</html>

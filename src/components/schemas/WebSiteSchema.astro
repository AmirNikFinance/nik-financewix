  '@context': 'https://schema.org',
  '@type': 'WebSite',
  '@id': 'https://www.nik.finance/#website',
  name: 'NIK Finance',
  url: 'https://www.nik.finance',
  description: 'Australia\'s smartest loan marketplace. AI-powered lender matching for car loans, home loans, personal loans, and business finance.',

---
import { Head } from "@/components/Head";
import FAQPage from "@/components/pages/FAQPage";
import "@wix/wix-vibe-plugins/plugins-vars.css";
import "@wix/wix-vibe-plugins/plugins-theme.css";
import "@/styles/global.css";

const title = "Frequently Asked Questions | Nik Finance";
const description = "Common questions about car loans, home loans, personal loans, and the finance broking process. Learn how Nik Finance helps you compare 130+ lenders for free.";
const canonical = "https://www.nik.finance/faq";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is Nik Finance free to use?",
      "acceptedAnswer": { "@type": "Answer", "text": "Yes, Nik Finance is completely free for borrowers. Lenders pay us a commission when your loan settles, so there is no cost to you." }
    },
    {
      "@type": "Question",
      "name": "How many lenders does Nik Finance compare?",
      "acceptedAnswer": { "@type": "Answer", "text": "We compare rates from over 130 lenders including major banks, credit unions, and specialist lenders across Australia." }
    },
    {
      "@type": "Question",
      "name": "How long does the application process take?",
      "acceptedAnswer": { "@type": "Answer", "text": "Our AI-powered system can match you with suitable lenders in minutes. Full approval timelines depend on the lender and loan type, but many applications are approved within 24-48 hours." }
    },
    {
      "@type": "Question",
      "name": "Can I get a loan with bad credit?",
      "acceptedAnswer": { "@type": "Answer", "text": "Yes. We work with specialist lenders who consider applicants with defaults, bankruptcies, and low credit scores. Visit our bad credit loans page for more information." }
    },
    {
      "@type": "Question",
      "name": "What types of loans does Nik Finance offer?",
      "acceptedAnswer": { "@type": "Answer", "text": "We help with car loans, home loans, personal loans, business loans, equipment finance, refinancing, and bad credit loans." }
    }
  ]
};
---

<html lang="en" class="w-full h-full">
  <head>
    <Head />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="FAQ, frequently asked questions, loan questions, finance broker questions, how it works, Nik Finance" />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </head>
  <body class="w-full h-full">
    <div id="seo-fallback">
      <h1>Frequently Asked Questions â€” Nik Finance</h1>
      <h2>Is Nik Finance free to use?</h2>
      <p>Yes, Nik Finance is completely free for borrowers. Lenders pay us a commission when your loan settles, so there is no cost to you.</p>
      <h2>How many lenders does Nik Finance compare?</h2>
      <p>We compare rates from over 130 lenders including major banks, credit unions, and specialist lenders across Australia.</p>
      <h2>How long does the application process take?</h2>
      <p>Our AI-powered system can match you with suitable lenders in minutes. Full approval timelines depend on the lender and loan type, but many applications are approved within 24-48 hours.</p>
      <h2>Can I get a loan with bad credit?</h2>
      <p>Yes. We work with specialist lenders who consider applicants with defaults, bankruptcies, and low credit scores.</p>
      <h2>What types of loans does Nik Finance offer?</h2>
      <p>We help with car loans, home loans, personal loans, business loans, equipment finance, refinancing, and bad credit loans.</p>
      <a href="/apply">Apply Now</a> | <a href="/car-loans">Car Loans</a> | <a href="/home-loans">Home Loans</a> | <a href="/bad-credit-loans">Bad Credit Loans</a>
    </div>
    <div id="root" class="w-full h-full">
      <FAQPage client:only="react" />
    </div>
    <script>document.getElementById('seo-fallback')?.remove();</script>
  </body>
</html>

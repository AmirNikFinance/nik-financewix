---
import { Head } from "@/components/Head";
import BusinessLoansPage from "@/components/pages/BusinessLoansPage";
import "@wix/wix-vibe-plugins/plugins-vars.css";
import "@wix/wix-vibe-plugins/plugins-theme.css";
import "@/styles/global.css";

const title = "Business Loans Australia | Equipment Finance & Working Capital | Nik Finance";
const description = "Compare business loan rates from 130+ lenders. Equipment finance, working capital, startup loans, and commercial lending. Fast approval for Australian businesses.";
const canonical = "https://www.nik.finance/business-loans";

const schema = {
  "@context": "https://schema.org",
  "@type": "FinancialProduct",
  "name": "Business Loans Australia",
  "description": description,
  "provider": { "@type": "FinancialService", "name": "Nik Finance", "url": "https://www.nik.finance" },
  "url": canonical
};
---

<html lang="en" class="w-full h-full">
  <head>
    <Head />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="business loan, equipment finance, working capital, startup loan, commercial loan, business finance, SME loan, Australia" />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body class="w-full h-full">
    <div id="seo-fallback">
      <h1>Business Loans Australia — Equipment Finance & Working Capital</h1>
      <p>Nik Finance connects Australian businesses with the right funding from over 130 lenders. From equipment finance and working capital to startup loans and commercial lending, our AI-powered platform finds the best rates for your business.</p>
      <h2>Business Loan Options</h2>
      <p>Equipment finance and asset loans. Working capital and cash flow funding. Startup business loans. Commercial property loans. Line of credit facilities. Invoice financing. Amounts from $10,000 to $5 million with flexible terms.</p>
      <h2>How Business Lending Works</h2>
      <p>Tell us about your business and funding needs. Our AI matches you with lenders most likely to approve your application. Compare offers and choose the best deal. Fast approval — many applications settled within days.</p>
      <a href="/apply">Apply Now</a> | <a href="/car-loans">Car Loans</a> | <a href="/home-loans">Home Loans</a> | <a href="/personal-loans">Personal Loans</a>
    </div>
    <div id="root" class="w-full h-full">
      <BusinessLoansPage client:only="react" />
    </div>
    <script>document.getElementById('seo-fallback')?.remove();</script>
  </body>
</html>
